#!/usr/bin/env perl

#
# Installation requirements
#   perl-Redis
#   perl-Time-HiRes
#   perl-Data-Faker
#

use strict;
use warnings;
use Redis;
use Getopt::Long;
use Data::Faker;
use Pod::Usage qw(pod2usage);

my $size = 1000;
my $tag = '';
my $type = 'hset';
my $batch = 50;
my $starttime;
my $endtime;
my $help = 0;
my $uri = '127.0.0.1:6379';

GetOptions (
  'uri:s' => \$uri,
  'size:i' => \$size,
  'tag:s' => \$tag,
  'type:s' => \$type,
  'batch:i' => \$batch,
  'help' => \$help,
) or die "Invalid options passed to $0\n";

pod2usage(-exitval=>0, -verbose=>2) if $help;

sub getstarttime {
  $starttime = Time::HiRes::gettimeofday();
}

sub getendtime {
  $endtime = Time::HiRes::gettimeofday();
}

sub getelapsedtime {
  printf("Elapsed time: %.2f\n", $endtime - $starttime);
}

my $redis = Redis->new(server => $uri);

$redis->ping || die "no server?";

print "Inserting $size records\n";

my $count = 1;

if ( $type eq 'HSET' or $type eq 'hset' )
{
  getstarttime();
  while ($count <= $size)
  {
    my $faker = Data::Faker->new();
    if ( $batch gt 1 )
    {
      if ( $tag ne '')
      {
        $redis->hmset("emp:{$tag}:$count", "name", $faker->name, "address", $faker->street_address, "city", $faker->city, sub {});
      }else{
        $redis->hmset("emp:$count", "name", $faker->name, "address", $faker->street_address, "city", $faker->city, sub {});
      }

      my $res = $count % $batch;

      if ( $res eq 0 )
      {
        $redis->wait_one_response;
      }
      
    }
    elsif ( $batch eq 1 )
    {
      if ( $tag ne '')
      {
        $redis->hmset("emp:{$tag}:$count", "name", $faker->name, "address", $faker->street_address, "city", $faker->city);
      }else{
        $redis->hmset("emp:$count", "name", $faker->name, "address", $faker->street_address, "city", $faker->city);
      }
    }
    
    $count += 1;
  }
  # $redis->wait_one_response;
  $redis->quit;
  getendtime();
  getelapsedtime();
}

__END__

=head1 NAME

redis-data-generator - A simple Redis/Valkey data generator

=head1 SYNOPSYS

redis-data-generator [options]

  Options:
    -help          Display the help message

    -uri           The URI string (default: 127.0.0.1:6379)
    -size          Number of records to generate
    -tag           The hash tag [eg key:{tag}:value]
    -type          Data type to generate [eg. HASH, STRING, etc]
    -batch         Size of records in pipeline

=head1 OPTIONS

=over 8

=item B<-help>

Display the help message and exit.

=item B<-size>

Number of records to generate.

=item B<-tag>

The hash tag to use (optional)

=item B<-type>

The data type to generate. Case-insensitive and only support HASH or hash for now.

=item B<-batch>

The nunber of records in the pipeline 

=back

=head1 DESCRIPTION

This program is a simple data generator for Redis/Valkey.

=cut